            android:layout_height="wrap_content" android:textSize="17dp"
            android:layout_gravity="center"
            android:text="Clear Sky" android:textColor="#FFFFFF"/></LinearLayout>

        <LinearLayout
            android:id="@+id/overviewContainer2.2" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_below="@+id/overviewContainer2.1">
            <TextView android:id="@+id/temp2" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="25dp"
                android:fontFamily="sans-serif-thin" android:layout_gravity="center"
                android:text="29°C" android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout android:id="@+id/overviewContainer3.0" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_below="@+id/overviewContainer2.2">
