<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/bg_gradient">

    <RelativeLayout android:id="@+id/mainContainer" android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="visible">
        <LinearLayout android:id="@+id/addressContainer" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:gravity="center">
            <Space android:layout_width="wrap_content" android:layout_height="30dp"/>
            <TextView android:id="@+id/tipota" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15dp"
                android:text="Προβλέψεις για 5 ημέρες για την πόλη:" android:textColor="#FFFFFF"/>
            <TextView android:id="@+id/address" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="24dp"
                android:text="DHAKA, BD" android:textColor="#FFFFFF"/>
            <Space android:layout_width="wrap_content" android:layout_height="20dp"/>
        </LinearLayout>





        <LinearLayout android:id="@+id/overviewContainer1.0" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_below="@+id/addressContainer">
            <TextView android:id="@+id/prognosi1" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="13dp"
                android:text="20 April 2012, 20:08 PM" android:textAlignment="center" android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/overviewContainer1.1" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_below="@+id/overviewContainer1.0"><TextView android:id="@+id/status" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="17dp"
            android:layout_gravity="center"
            android:text="Clear Sky" android:textColor="#FFFFFF"/></LinearLayout>

        <LinearLayout
            android:id="@+id/overviewContainer1.2" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_below="@+id/overviewContainer1.1">
        <TextView android:id="@+id/temp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="25dp"
            android:fontFamily="sans-serif-thin" android:layout_gravity="center"
            android:text="29°C" android:textColor="#FFFFFF" />
    </LinearLayout>


        <LinearLayout android:id="@+id/overviewContainer2.0" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_below="@+id/overviewContainer1.2">
